<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Large</item>
        <item name="android:background">#64b5f6</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="class3_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Large</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="button_style" parent="android:style/Widget.Material.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#64b5f6</item>
    </style>


    <style name="StudyModel_bar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Other style attributes -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>